  "me", "Maine",
  "md", "Maryland",
  "ma", "Massachusetts",
  "mi", "Michigan",
  "mn", "Minnesota",
  "ms", "Mississippi",
  "mo", "Missouri",
  "mt", "Montana",
  "ne", "Nebraska",
  "nv", "Nevada",
  "nh", "New Hampshire",
  "nj", "New Jersey",
  "nm", "New Mexico",
  "ny", "New York",
  "nc", "North Carolina",
