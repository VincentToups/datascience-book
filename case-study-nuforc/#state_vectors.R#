library(tidyverse)
library(maps)
library(cowplot)

# Hard-coded abbreviation -> state name mapping
state_map <- tribble(
  ~state, ~name,
  "al", "Alabama",
  "ak", "Alaska",
  "az", "Arizona",
  "ar", "Arkansas",
  "ca", "California",
  "co", "Colorado",
